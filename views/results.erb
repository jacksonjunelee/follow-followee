<% if @flash  %>
  <h2><%= @flash%></h2>
<% end %><hr>

<table>
  <tr>
    <th>Count</th>
    <th>USERNAME</th>
    <th>FULL NAME</th>
    <th>PROFILE PICTURE</th>
    <th>STATS</th>
  </tr>

<% @data.each_with_index do |person, index| %>
  <tr>
    <th><%= index + 1 %></th>
    <th><%= person["username"] %></th>
    <th> <%= person["full_name"] %></th>
    <th><img src="<%= person['profile_picture']%>"></th>
    <th>
      <p> Followers: <%= person["followers"] %><p>
      <p> Followed_by: <%= person["followed_by"] %><p>
    </th>
    <th>
        <a href="/follow_search/<%= person["id"] %>?username=<%= person["username"] %>">Get a List this User follows</a><br>
        <a href="/follow_by_search/<%= person["id"] %>?username=<%= person["username"] %>">Get a list of users this User is followed by</a>
    </a>
  </tr>
<% end %>
</table>
